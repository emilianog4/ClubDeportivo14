<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card_white"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_profesor"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:src="@drawable/carnet"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_nombre_profesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan Perez - ID_Prof: 1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_especialidad_profesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especialidad: Funcional (Activo)"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
